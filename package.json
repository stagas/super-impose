{
  "name": "super-impose",
  "author": "stagas",
  "short": "stagas/super-impose",
  "description": "custom element that super imposes one child over another to the same scroll position",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://git@github.com:stagas/super-impose.git"
  },
  "keywords": [
    "custom-element",
    "super-impose"
  ],
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && echo done.",
    "docs": "documentation readme src --resolve=node --pe ts --re ts --re d.ts --github --section=API --markdown-toc-max-depth=3",
    "test": "echo ok",
    "playground": "vite --force --cors --clearScreen=false --open /playground/",
    "lint": "eslint src && prettier --check src",
    "docs:watch": "onchange -i src --await-write-finish 400 -- npm run docs",
    "build:watch": "npm run build:cjs:watch & npm run build:esm:watch",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:cjs:watch": "tsc -p tsconfig.cjs.json --watch",
    "build:esm": "tsc -p tsconfig.esm.json && echo '{\"type\":\"module\"}' >dist/esm/package.json",
    "build:esm:watch": "tsc -p tsconfig.esm.json --watch",
    "build:min": "esbuild src/index.ts --bundle --format=esm | terser --compress --module --mangle -o build.min.js",
    "lint:fix": "eslint --fix src && prettier --write src",
    "clean": "rimraf dist",
    "prepack": "npm run build",
    "prepack:dry": "npm pack --dry-run",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@stagas/documentation-fork": "^13.2.5",
    "@stagas/sucrase-jest-plugin": "^2.2.0-fork",
    "@swc-node/jest": "^1.4.3",
    "@tsconfig/node16": "^1.0.2",
    "@types/node": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "esbuild": "^0.14.8",
    "esbuild-register": "^3.2.1",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^7.0.4",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "terser": "^5.10.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "vite": "^2.7.6"
  }
}
